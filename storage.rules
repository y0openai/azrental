rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 프로필 이미지
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true; // 공개 읽기
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 아저씨 포트폴리오 이미지
    match /portfolios/{uncleId}/{allPaths=**} {
      allow read: if true; // 공개 읽기
      allow write: if request.auth != null && request.auth.uid == uncleId;
    }

    // 아저씨 이미지 (프로필, 신분증)
    match /uncles/{uncleId}/{allPaths=**} {
      // 프로필 이미지는 공개 읽기
      allow read: if true;
      // 본인 또는 temp 경로만 쓰기 가능
      allow write: if request.auth != null &&
        (request.auth.uid == uncleId || uncleId.matches('temp_.*'));
    }

    // 아저씨 신분증 (제한된 접근)
    match /uncles/{uncleId}/id-card/{fileName} {
      // 신분증은 본인과 관리자만 읽기 가능
      allow read: if request.auth != null && request.auth.uid == uncleId;
      // 본인만 쓰기 가능
      allow write: if request.auth != null &&
        (request.auth.uid == uncleId || uncleId.matches('temp_.*'));
    }

    // 기타 파일은 인증된 사용자만
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
